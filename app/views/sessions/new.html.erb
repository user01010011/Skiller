<h1>Log In to Your Skiller!</h1>

<%= form_for(:user) do |f| %>
    <%= f.label :username %>
    <%= f.text_field :username %><br>
    <%= f.label :password %>
    <%= f.password_field :password %><br>
    <br>
    <%= f.submit "Submit" %>
<% end %>

<br>
<h3>Don't have an account? Sign up today!</h3>
<p><%= link_to "Sign Up", signup_path %></p>