<p id="notice"><%= notice %></p>

<h1>My Amazing Courses! ðŸ–¥</h1>
<%= form_tag(courses_path, method: 'get') do %>
      <%= text_field_tag(:search, params[:search]) %>
      <%= submit_tag("Search", name: nil) %>
<% end %>
<br>
<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Skill</th>
      <th>Course name</th>
      <th>Course description</th>
      <th>Institution</th>
      <th>Teacher</th>
      <th>Importance</th>
      <th>Progress</th>
      <th>Course url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.user.username %></td>
        <td><%= course.skill.skill_name %></td>
        <td><%= course.course_name %></td>
        <td><%= course.course_description %></td>
        <td><%= course.institution %></td>
        <td><%= course.teacher %></td>
        <td><%= course.importance %></td>
        <td><%= course.progress %></td>
        <td><a href="#"><%= course.course_url %></td>
        <td><%= link_to 'Show', course %></td>
        <td><%= link_to 'Edit', edit_course_path(course) %></td>
        <td><%= link_to 'Delete', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add A Course!', new_course_path %>